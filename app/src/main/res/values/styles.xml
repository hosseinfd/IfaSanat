<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="CardViewStyle" parent="CardView.Light">

        <item name="cardCornerRadius">6dp</item>

        <item name="cardMaxElevation">2dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>

    </style>

    <style name="CardViewStyle2" parent="CardView.Light">

        <item name="cardCornerRadius">3dp</item>

        <item name="cardMaxElevation">2dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>

    </style>

    <style name="CardViewStyleAddWell" parent="CardView.Light">

        <item name="cardCornerRadius">1dp</item>
        <item name="cardMaxElevation">2dp</item>
       <item name="cardPreventCornerOverlap">true</item>

    </style>


    <style name="AppTheme.CheckBox">
        <item name="colorAccent">@color/button_color</item>
    </style>


    <style name="TextLabel_" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/text_view_defines</item>

        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/button_color</item>
        <item name="colorControlNormal">@color/text_view_defines</item>
        <item name="colorControlActivated">@color/text_view_defines</item>
    </style>



    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color_white</item>
        <item name="android:textColor">@color/black</item>


    </style>
</resources>
